<h2 align="center">Edit <%= resource_name.to_s.humanize %></h2>
<div class="container-sm  edit-form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
   <div class="field">
    <h4><%= f.label :image %></h4>
    <%= f.file_field :image, id:"formforedit" , class:"form-control",autofocus: true%>
    <p style="color:red;"><%= show_error_message("Image",resource.errors[:image][0]) if resource.errors[:image].any? %></p>
  </div>
  <div class="field">
    <h4><%= f.label :email %></h4>
    <%= f.email_field :email, id:"formforedit" , class:"form-control",autofocus: true, autocomplete: "email" %>
    <p style="color:red;"><%= show_error_message("Email",resource.errors[:email][0]) if resource.errors[:email].any? %></p>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <h4><%= f.label :password %></h4> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, id:"formforedit" , class:"form-control",autocomplete: "new-password" %>
    <p style="color:red;"><%= show_error_message("Password",resource.errors[:password][0]) if resource.errors[:password].any? %></p>
  </div>

  <div class="field">
    <h4><%= f.label :password_confirmation %></h4>
    <%= f.password_field :password_confirmation, id:"formforedit" , class:"form-control", autocomplete: "new-password" %>
    <p style="color:red;"><%= show_error_message("Password confirmation",resource.errors[:password_confirmation][0]) if resource.errors[:password_confirmation].any? %></p>
  </div><br>

  <div class="field">
    <h4><%= f.label :current_password %></h4> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, id:"formforedit" , class:"form-control",autocomplete: "current-password" %>
    <p style="color:red;"><%= show_error_message("Current password",resource.errors[:current_password][0]) if resource.errors[:current_password].any? %></p>
  </div>
    
  <%= f.submit "Update",class:"btn btn-primary col-sm-1"%>
  
<% end %>
<%= render 'homepage/delete'%>
<%= link_to "Back", :back ,class:" badge"%>
</div>
