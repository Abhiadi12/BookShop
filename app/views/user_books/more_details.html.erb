<div class="container bg-light m-auto" style="width:50%">
  <%= form_with url:more_details_path,scope: :about_book,method: :post,local:true do |form| %>
  <div class="form-group">
    <label for="exampleInputAuthor">Author Name</label>
    <input type="text" class="form-control" id="exampleInputAuthor" aria-describedby="authorHelp" name="author_name" required>
    <small id="authorHelp" class="form-text text-muted stock-alert">Please give genuiene authoe name</small>
  </div>
  <div class="form-group">
    <label for="inlineFormCustomSelectPref">Category</label>
    <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" name="category_select" required>
    <option disabled selected>Choose...</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
  <% end %>
</div>